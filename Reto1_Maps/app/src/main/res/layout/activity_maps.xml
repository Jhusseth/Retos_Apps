<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <Button
        android:id="@+id/setPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="378dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/location" />

    <Button
        android:id="@+id/InfoPos"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp"
        android:background="#9E2FCA13"
        android:text="POSICCION"
        android:textAlignment="center" />

    <Button
        android:id="@+id/eraseM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="376dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="157dp"
        android:background="@drawable/erase" />

    <Button
        android:id="@+id/addM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="377dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/add"
        android:text=""
        android:textAlignment="center" />

</RelativeLayout>